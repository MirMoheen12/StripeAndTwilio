@model StripeAndTwilio.Models.Supplier

@{
    ViewBag.Title = "AddSupplier";
    Layout = "~/Views/Shared/AdminTheme.cshtml";
}

<div class="nk-block nk-block-lg">
    <div class="nk-block-head">
        <div class="nk-block-head-content">
            <h4 class="title nk-block-title">Add new Supplier</h4>
            <div class="nk-block-des">
            </div>
        </div>
    </div>
    <div class="card card-bordered">
        <div class="card-inner">
            <div class="card-head">

            </div>
            <form method="post" action="~/AdminSide/AddSupplier">
                <div class="row g-4">
                    <div class="col-lg-6">


                        <div class="form-group">
                            <label class="form-label" for="full-name-1">Full Name</label>
                            <div class="form-control-wrap">
                                @Html.EditorFor(model => model.SName, new { htmlAttributes = new { @class = "form-control" } })

                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="form-label" for="email-address-1">Email</label>
                            <div class="form-control-wrap">
                                @Html.EditorFor(model => model.SEmail, new { htmlAttributes = new { @class = "form-control" } })

                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="form-label" for="phone-no-1">Contact</label>
                            <div class="form-control-wrap">
                                @Html.EditorFor(model => model.SContact, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="form-label" for="pay-amount-1">Order No</label>
                            <div class="form-control-wrap">
                                @Html.EditorFor(model => model.refno, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-group">
                            <button type="submit" class="btn btn-lg btn-primary">Save Informations</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
