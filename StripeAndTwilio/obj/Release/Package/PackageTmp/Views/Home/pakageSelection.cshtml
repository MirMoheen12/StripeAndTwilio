@{
    ViewBag.Title = "Home Page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link href="~/Content/HomeTheme/ChooseYourVehicle.css" rel="stylesheet" />

    <scriptsrc="https://kit.fontawesome.com/ee9cae1b8f.js" crossorigin="anonymous"></script>
</head>
<body>
    <!-- TODO: Navbar Section -->
    <section>
        <div class="navbar">
            <img class="logo"src="~/Content/HomeTheme/assets/Darklogo.png" alt="logo" />
            <div class="CountriesFlags">
                <div class="CountriesFlags-info">
                    <img class="flag"
                        src="~/Content/HomeTheme/assets/Flag_of_the_United_Kingdom 1.png"
                         alt="flag" />
                    <i class="fa-solid fa-caret-down"></i>
                    <span class="horihentalLine"></span>
                    <p>Helpdesk</p>
                </div>
                <i class="fa-solid fa-bars"></i>
            </div>
        </div>
    </section>

    <section>
        <div class="stepLine">
            <div class="setpProcess">
                <span class="curcleOfSteps">1</span>
                <p>Journey</p>
                <span class="lineOfSetps"></span>
            </div>
            <div class="setpProcess">
                <span class="curcleOfSteps">2</span>
                <p>Journey</p>
                <span class="lineOfSetps"></span>
            </div>
            <div class="setpProcess">
                <span class="curcleOfSteps">3</span>
                <p>Journey</p>
                <span class="lineOfSetps"></span>
            </div>
            <div class="setpProcess">
                <span class="curcleOfSteps">4</span>
                <p>Journey</p>
                <span class="lineOfSetps"></span>
            </div>
        </div>
    </section>

    <section>
        <div class="container">
            <!-- TODO: Cart conatiner -->
            <h1 class="vehicle">Choose your vehicle</h1>
            <div class="sub-container">
                <div class="subcar-container">
                    <div class="left-container">
                        <div class="subLeftContainer">
                            <div class="subLeftContainerInfo">
                                <img src="~/Content/HomeTheme/assets/car.png" alt="car" />
                                <button class="addExtras removeSmall">Add extras</button>
                            </div>

                            <div class="subRightContainer">
                                <h1>Business sedan</h1>
                                <div class="MinMaxContainer">
                                    <p>Max. 3</p>
                                    <p>Max. 3</p>
                                </div>
                                <div class="subLeftContainerDesc">
                                    <p>60 min free waiting time</p>
                                    <p>Estimated duration:</p>
                                </div>
                                <div class="subLeftContainerTransfer">
                                    <p>Direct transfer reserved solely for your party</p>
                                </div>

                                <span class="subLeftContainerTransferLine"></span>

                                <div class="subRightContainerToalAmount">
                                    <p>Total Amount</p>
                                    <del>€ 289.59</del>
                                </div>
                                <div class="subRightContainerTotal">
                                    <h1>€ 260.63</h1>
                                    <p>You save 10%</p>
                                </div>
                            </div>
                        </div>
                        <button class="addExtras removeLarge">Add extras</button>
                        <button class="Select">Select</button>
                    </div>
                    <div class="left-container">
                        <div class="subLeftContainer">
                            <div class="subLeftContainerInfo">
                                <img src="~/Content/HomeTheme/assets/car.png" alt="car" />
                                <button class="addExtras removeSmall">Add extras</button>
                            </div>

                            <div class="subRightContainer">
                                <h1>Business sedan</h1>
                                <div class="MinMaxContainer">
                                    <p>Max. 3</p>
                                    <p>Max. 3</p>
                                </div>
                                <div class="subLeftContainerDesc">
                                    <p>60 min free waiting time</p>
                                    <p>Estimated duration:</p>
                                </div>
                                <div class="subLeftContainerTransfer">
                                    <p>Direct transfer reserved solely for your party</p>
                                </div>
                                <span class="subLeftContainerTransferLine"></span>
                                <div class="subRightContainerToalAmount">
                                    <p>Total Amount</p>
                                    <del>€ 289.59</del>
                                </div>
                                <div class="subRightContainerTotal">
                                    <h1>€ 260.63</h1>
                                    <p>You save 10%</p>
                                </div>
                            </div>
                        </div>
                        <button class="addExtras removeLarge">Add extras</button>
                        <button class="Select">Select</button>
                    </div>
                </div>

                <!-- TODO: Right Container -->
                <div class="right-container">
                    <div class="rightContainerInfo">
                        <div class="rightContainerMap">
                            <img src="~/Content/HomeTheme/assets/staticmap.png" alt="map">
                        </div>
                        <div class="rightContainerDetails">
                            <div class="rightContainerDetailsInfo">
                                <strong>From:</strong>
                                <p>London Luton Airport (LTN) London UK</p>
                            </div>
                            <div class="rightContainerDetailsInfo">
                                <strong>To:</strong>
                                <p>London Gatwick Airport (LGW) London, West Sussex, UK</p>
                            </div>
                            <div class="rightContainerDetailsInfo">
                                <strong>On:</strong>
                                <p>03-03-2023 00:50</p>
                                <p>Distance: 97.3 km</p>
                                <p>Probable duration: 126 min</p>
                            </div>
                            <div class="buttonInfo">
                                <button>Edit</button>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>


    </section>
    <section>
        <div class="footer">
            <p>Copyright Reserved by company name, 2023</p>
        </div>
    </section>
</body>
</html>


